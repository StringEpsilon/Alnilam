{
	"compilerOptions": {
		"moduleResolution": "node",
		"jsx": "react",
		"noEmit": true,
		"module": "es2015",
		"removeComments": true,
		"lib": [
			"es2015",
			"es2016",
			"dom"
		],
		"strict": true,
		"allowSyntheticDefaultImports": true,
		"typeRoots": [
			"node_modules/@types"
		],
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"resolveJsonModule": true,
		"declaration": true,
		"declarationDir": "dist/types",
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		"**.test.**"
	]
}