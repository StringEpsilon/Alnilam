
{
  "compilerOptions": {
    "moduleResolution": "node",
    "jsx": "react",
    "target": "es5",
    "module":"es2015",
    "removeComments": true,
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "strict": true,
    "sourceMap": false,
    "declaration": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": false,
    "outDir": "dist/lib",
    "typeRoots": [
      "node_modules/@types"
    ],
    "noImplicitAny": true
  },
  "include": [
    "src"
  ]
}
